@{
    Layout = "";
}
@model int 
<!doctype html>
<html lang="en-US" class="default">
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link src="http://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <link href="~/css/administrator/adminsite.css" rel="stylesheet" />
    <title>Set up your new password</title>
</head>

<body id="index" style="margin:0">
    <style>
        /*scroll menu*/
        body::-webkit-scrollbar {
            width: 12px;
        }
        /* Track */
        body::-webkit-scrollbar-track {
            background: #61B4B9;
        }
        /* Handle */
        body::-webkit-scrollbar-thumb {
            background: #f4bc5b;
            border-radius: 10px;
        }
            /* Handle on hover */
            body::-webkit-scrollbar-thumb:hover {
                background: #ee8431;
                cursor: grabbing;
            }

        .inputType {
            padding: 10px 0.85vw;
            border: 1.8px solid #e2bd7e;
            border-radius: 3px;
            color: #154b33;
            background: rgb(255 255 255 / 0.78)
        }

            .inputType:focus {
                background: rgb(255 255 255 / 0.98);
                border: 2px solid #f9d632;
                font-weight: 500;
                color: #b97710;
                outline: none
            }

        .btnSignup {
            background: #f9d632;
            border: 2px solid #f9d632;
            color: white;
            padding: 10px 12px;
            margin-bottom: 8vh;
        }

            .btnSignup:hover, .btnSignup:focus {
                background: white;
                border: 2px solid #f9d632;
                font-weight: 700;
                color: #f9d632;
                outline: none
            }
    </style>
    <main id="page">
        <img src="~/img/bgc.jpg" style="width:100%" />
        <div style="top: 50px; position: absolute;position:fixed; z-index: 220; display: none;" class="col-12" id="message">
            <div class="container pt-2 pb-1" style="width:50%;">
                <label id="msg_status">

                </label>
            </div>
        </div>
        <div style="top: 50px; position: absolute;position:fixed; z-index: 220; display: none; text-align:center" class="col-12" id="waiting">
            <span class="container" style="background: rgb(109 99 71 / 0.70); color:#f8f8f8;  padding: 20px 30px; ">
                <i class="fa fa-spinner fa-spin" style="font-size: 20px "></i> Waiting...
            </span>
        </div>
        <div class="col-12" style="top:10vh; position:absolute;">
            <div class="col-5" style="background-image: linear-gradient(150deg, #f2fffe, #bbffde); opacity: 0.85; border-radius: 15px; height: 62vh; left: 8vw; display: table; box-shadow: 0 0 8rem 2rem rgb(218 255 246);border:3px solid #d7fdfa ">
                @if (Model == 0)
                {
                    <form action="@Url.Action("VerifyAction", "User")" method="post" class="container form-signup col-10" style="min-height:500px; text-align:left">
                        <div style="text-align:center;margin:8vh auto 2vh auto" class="col-12">
                            <img src="~/img/defaults/logo.png" style=" width: 50%;" />
                        </div>
                        <h3 class="container" style="color: #f4cf24; text-align: center; margin-bottom: 3vh; letter-spacing: 2px">VERIFY EMAIL</h3>
                        <label class="text-color mb-3" style="font-size:15px">@ViewBag.data</label>
                        <input class="inputType col-lg-12  contaiter" style="margin-bottom: 8px;" placeholder="verify code" id="user_name" name="verify_code" type="text" />
                        <a id="resend" style="color: #993829; font-size: 13px;cursor:pointer;text-decoration:underline ">Resend?</a>

                        @if (TempData["ErrorVerifyUser"] != null)
                        {
                            <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

                            <label class="container mb-2 mt-1" style="padding: 9px 15px; color: #ef3109; font-size: 17px;letter-spacing:0.8px; font-weight:600; background:rgb(255 101 79 / 0.40)" id="msgerror">
                                <i class="fa fa-exclamation-triangle" style="margin-right:0.3vw"></i>
                                @TempData["ErrorVerifyUser"]
                            </label>
                            TempData["ErrorVerifyUser"] = null;
                            <script type="text/javascript">
                                $("#msgerror").delay(3000).fadeOut(300);
                            </script>

                        }

                        <button type="submit" class="btnSignup col-lg-12 mt-2">CONTINUE</button>

                    </form>
                }
                @if (Model == 1)
                {
                    <div class="container form-signup col-10" style="min-height:500px; text-align:left">
                        <div style="text-align:center;margin:8vh auto 2vh auto" class="col-12">
                            <img src="~/img/defaults/logo.png" style=" width: 50%;" />
                        </div>
                        <h3 class="container" style="color: #f4cf24; text-align: center; margin-bottom: 3vh; letter-spacing: 2px">SET UP NEW PASSWORD</h3>
                        <input class="inputType col-lg-12  contaiter" style="margin-bottom: 8px;" placeholder="password" name="password" id="pass" type="password" />
                        <input class="inputType col-lg-12  contaiter" style="margin-bottom: 8px;" placeholder="confirm password" id="repass" type="password" />
                        <button type="submit" class="btnSignup col-lg-12" id="btnSetUp">OK</button>
                        <label class="container mb-2 mt-1" style="padding: 9px 15px; color: #ef3109; font-size: 17px;letter-spacing:0.8px; font-weight:600; background:rgb(255 101 79 / 0.40);display:none" id="msgerrorsetup">


                        </label>
                    </div>
                }
            </div>
        </div>
    </main>
    <footer style="background:rgb(107 159 141 / 0.63); color: white; height: 60px; z-index: 10; position: fixed; bottom: 0; text-align: center; padding: 18px 0" class="col-12">
        © 2022 Copyright: !!! web name
    </footer>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script type="text/javascript">
        function ShowWaiting(duration) {
            $("#waiting").css("display", "block");
            $("#waiting").delay(duration).fadeOut(300);
        }
        function ShowMessage(type, msg) {
            $("#msg_status").empty();
            var ele = document.getElementById("message").children[0];
            ele.classList.remove("success", "error");
            $("#msg_status").append(type == true ? '<i class= "fa fa-check-circle" style = "margin-right:0.3vw" ></i>' : '<i class="fa fa-exclamation-triangle" style="margin-right:0.3vw"></i>');
            $("#msg_status").append(msg);
            ele.classList.add(type == true ? "success" : "error");
            $("#message").css("display", "block");
            $("#message").delay(3000).fadeOut(300);
        }
        $("#btnSetUp").click(function () {
            $("#msgerrorsetup").css("display", "none");
            $("#msgerrorsetup").html('');
            if ($("#pass").val() != $("#repass").val() || $("#pass").val().length < 6 || $("#repass").val().length < 6) {
                $("#msgerrorsetup").html(' <i class="fa fa-exclamation-triangle" style="margin-right:0.3vw"></i> The password does not match or not enough 6 characters');
                $("#msgerrorsetup").css("display", "block");
            } else {
                ShowWaiting(1500);
                var formData = new FormData();
                formData.append("newpass", $("#pass").val());
                $.ajax({
                type: "POST",
                url: "@Url.Action("SetUpNewPass", "User")",
                data: formData,
                processData: false,
                contentType: false,
                 success: function (data) {
                     window.location.href = "@Url.Action("Login","User")";

                }
            });
            }
        })
        function sleep(delay) {
            var start = new Date().getTime();
            while (new Date().getTime() < start + delay);
        }
        $("#resend").click(function () {
            ShowWaiting(1800);

               var formData = new FormData();
                formData.append("type", 0);
                $.ajax({
                type: "POST",
                url: "@Url.Action("VerifyUser", "User")",
                data: formData,
                processData: false,
                contentType: false,
                    success: function () {
                        ShowMessage(true,"Sent~!")
                }
            });
        });
    </script>
</body>

</html>
