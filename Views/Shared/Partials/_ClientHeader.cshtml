                                                <button style="background-color: transparent;border-color: transparent;width: 35%;" class="p-0">
                                                   <i class="fa-solid fa-chevron-left" style="color: #ffdc39;font-size: 10px;"></i>
                                                </button>
                                                <p class="text-white" style="font-size: 14px;padding-top: 15px;width: 100%;"></p>
                                            </li>
                                            <li style="padding: 0 15px;" id="search-location">
                                                <input type="search" placeholder="Search" style="padding: 10px;"
                                                    id="search-location">
                                            </li>
                                            <div style="overflow: hidden scroll;height: 135px; color: white;" id="location-list">
                                                
                                            </div>
                                        </ul>
                                    </li>
